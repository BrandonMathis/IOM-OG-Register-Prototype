<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.name %></td>
	<td><%=h user.user_id %></td>
	<td>
	<div class="buttons">
  		<%= link_to "View", user_url(user),
  			:class => "button" %>
  		<%= link_to "Edit", edit_user_path(user),
  			:class => "button" %>
   		<%= link_to "Delete", user,
  			:confirm => 'Are you sure?',
  			:method => :delete,
  			:class => "button" %>
    </div>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
