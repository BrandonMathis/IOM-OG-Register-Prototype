<h1>New database</h1>

<% form_for(@database) do |f| %>
  <%= f.error_messages %>
	<p>
		<%=f.label :name%>
		<%=f.text_field :name%>
	</p>
	
	<p>
		<%=f.hidden_field :user_id, :value => session[:user_id]%>
	</p>
	
	<p>
		<%=f.hidden_field :created_date, :value => Time.now%>
	</p>
  	
	<p>
	   <%= f.submit 'Create' %>
	</p>
<% end %>

<%= link_to 'Back', databases_path %>